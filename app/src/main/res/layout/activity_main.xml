<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="478dp"
        android:text="@string/mainTextViewString"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="270sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:onClick="onPressRefreshScreen"
        android:text="@string/refresh_button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonAlt"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:onClick="startRefreshingButton"
        android:text="@string/refreshButtonStart" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonAlt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:onClick="sendNotificationButton"
        android:text="@string/send_notification"
        android:visibility="invisible" />

</RelativeLayout>